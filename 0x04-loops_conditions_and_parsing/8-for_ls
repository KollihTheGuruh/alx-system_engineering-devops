#!/usr/bin/env bash
# This script displays the content of the current directory in a list format, with only the part of the name after the first dash displayed.

# Using a for loop to iterate over the files in the current directory
for file in *; do
    # Check if the file is not hidden and contains a dash in its name
    if [[ ! $file == .* ]] && [[ $file == *-* ]]; then
        # Extract the part of the name after the first dash
        new_name="${file#*-}"
        echo "$new_name"
    fi
done
