#!/bin/bash

# Function to remove the PID file and terminate the script
cleanup_and_exit() {
    echo "Cleaning up and terminating..."
    rm -f /var/run/myscript.pid
    exit 0
}

# Function to handle SIGTERM and SIGQUIT signals
terminate_signal_handler() {
    cleanup_and_exit
}

# Function to handle SIGINT signal
interrupt_signal_handler() {
    echo "Y U no love me?!"
}

# Function to handle SIGTERM signal
hate_kill_signal_handler() {
    echo "I hate the kill command"
}

# Set the signal handlers
trap terminate_signal_handler SIGTERM SIGQUIT
trap interrupt_signal_handler SIGINT
trap hate_kill_signal_handler SIGTERM

# Create the PID file with the current process ID
echo $$ > /var/run/myscript.pid

# Loop and display the message indefinitely
while true; do
    echo "To infinity and beyond"
    sleep 1
done

